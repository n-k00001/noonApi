@model AppUser
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>


<form asp-controller="Users" asp-action="Edit" class="form-group">


    <label asp-for="Id">Id</label>
    <input asp-for="Id" type="text" readonly class="form-control" />
    <br />

    <label asp-for="DisplayName">User Name</label>
    <input asp-for="DisplayName" type="text" class="form-control" />
    <br />

    <label asp-for="Email">Email</label>
    <input asp-for="Email" type="text" class="form-control" />
    <br />

    <label asp-for="PhoneNumber">Phone Number</label>
    <input asp-for="PhoneNumber" type="text" class="form-control" />
    <br />


    <input type="submit" value="Edit" class="btn btn-primary btn-block" />
    <a asp-action="index" type="button" class="btn btn-info " style="margin-left:2rem">Back to list</a>

</form>